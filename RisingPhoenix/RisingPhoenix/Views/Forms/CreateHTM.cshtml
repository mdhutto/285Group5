@model RisingPhoenix.Models.Forms

@{
    ViewData["Title"] = "CreateHTM";
}

<h2>Here's the Money</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHTM">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SenderId" class="control-label"></label>
                <select asp-for="SenderId" class="form-control" asp-items="ViewBag.SenderId"></select>

            </div>
            <div class="form-group">
                <label asp-for="RecipientId" class="control-label"></label>
                <select asp-for="RecipientId" class="form-control" asp-items="ViewBag.RecipientId"></select>

            </div>
            <div class="form-group">
                <label asp-for="Income" class="control-label"></label>
                <input asp-for="Income" class="form-control" />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
